<div class="superbody">

  <form class="form-container" action="/auth/login" method="post">
    <h3>Formulario de Login</h3>
    <label for="email">Correo</label>
    <input type="email" name="email" placeholder="Introduzca email" />

    <label for="password">Contraseña</label>
    <input
      type="password"
      name="password"
      placeholder="Introduzca Contraseña"
    />

    <button class="login-btn">ACCEDER</button>
    <p class="not-member">
      No eres miembro?
      <a href="/auth/signup">Registrate</a>
    </p>

    {{#if this.errorMessage}}
      <p style="color: red">{{this.errorMessage}}</p>
    {{/if}}

  </form>
  <footer>
    <p>Proyecto realizado por FA-CRIS</p>
  </footer>
</div>