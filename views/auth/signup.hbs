<div class="superbody">

  

    <form class="form-container" action="/auth/signup" method="post">
      <h3>Formulario deRegistro</h3>
      
    <label for="username">Nombre de Usuario</label>
    <input type="text" name="username" placeholder="Introduzca nombre de usuario" >
    
    <label for="email">Correo</label>
    <input type="email" name="email" placeholder="Introduzca email">
    
    <label for="password">Contraseña</label>
    <input type="password" name="password" placeholder="Introduzca Contraseña">
    
    <button class="login-btn">REGISTRO</button>
    
     {{#if this.errorMessage}}
      <p style= "color: red" >{{this.errorMessage}}</p>
    {{/if}}
    </form>
<footer>
     <p>Proyecto realizado por FA-CRIS</p>
    </footer>
</div>