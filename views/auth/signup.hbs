<div>

    <h3>Formulario deRegistro</h3>

    <form action="/auth/signup" method="post">
    <label for="username">Nombre de Usuario</label>
    <input type="text" name="username" placeholder="Introduzca nombre de usuario" >
    <br>
    <label for="email">Correo</label>
    <input type="email" name="email" placeholder="Introduzca email">
    <br>
    <label for="password">Contraseña</label>
    <input type="password" name="password" placeholder="Introduzca Contraseña">
    <br>
    <button>Registro</button>
    
     {{#if this.errorMessage}}
      <p style= "color: red" >{{this.errorMessage}}</p>
    {{/if}}
    </form>

</div>